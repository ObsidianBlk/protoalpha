extends UIControl


# ------------------------------------------------------------------------------
# Onready Variables
# ------------------------------------------------------------------------------
@onready var _btn_center: PanelContainer = %BTN_CENTER


# ------------------------------------------------------------------------------
# "Virtual" Methods
# ------------------------------------------------------------------------------
func _on_reveal() -> void:
	_btn_center.grab_focus()
	super._on_reveal()

# ------------------------------------------------------------------------------
# Handler Methods
# ------------------------------------------------------------------------------
func _on_level_pressed(id : int) -> void:
	request(Game.UI_ACTION_LOAD_LEVEL, [id])
