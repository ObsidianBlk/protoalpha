extends PickupBody2D


# ------------------------------------------------------------------------------
# Constants
# ------------------------------------------------------------------------------
const AUDIO : StringName = &"pickup"

# ------------------------------------------------------------------------------
# Export Variables
# ------------------------------------------------------------------------------
@export var sound_sheet : SoundSheet = null


# ------------------------------------------------------------------------------
# Handler Methods
# ------------------------------------------------------------------------------
func _on_detected(_hitbox : HitBox) -> void:
	if sound_sheet != null:
		sound_sheet.play(AUDIO)
	Game.State.lives += 1
	queue_free.call_deferred()
