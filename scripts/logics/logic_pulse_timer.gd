@tool
extends Timer
class_name LogicPulseTimer


# ------------------------------------------------------------------------------
# Signals
# ------------------------------------------------------------------------------
signal trigger_state_changed(triggered : bool)

# ------------------------------------------------------------------------------
# Override Methods
# ------------------------------------------------------------------------------
func _ready() -> void:
	timeout.connect(_on_timeout)

# ------------------------------------------------------------------------------
# Public Methods
# ------------------------------------------------------------------------------
func is_triggered() -> bool:
	return false

# ------------------------------------------------------------------------------
# Handler Methods
# ------------------------------------------------------------------------------
func _on_timeout() -> void:
	trigger_state_changed.emit(true)
