extends Node
class_name Activator

# ------------------------------------------------------------------------------
# Signals
# ------------------------------------------------------------------------------
signal activated()
signal deactivated()

# ------------------------------------------------------------------------------
# Constants
# ------------------------------------------------------------------------------
const GROUP_ACTIVATOR : StringName = "activator"

# ------------------------------------------------------------------------------
# Override Methods
# ------------------------------------------------------------------------------
func _ready() -> void:
	add_to_group(GROUP_ACTIVATOR)

# ------------------------------------------------------------------------------
# Public Methods
# ------------------------------------------------------------------------------
func activate() -> void:
	activated.emit()

func deactivate() -> void:
	deactivated.emit()
